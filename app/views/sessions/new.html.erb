<h1>WALKr</h1>
<h3>Helping you help your furry friend.</h3>

<h2>LOGIN</h2>

<% if session[:user_id] %>
  <p><%= session[:user_id] %></p>
<% end %>

<% if flash[:success] %>
  <p><%= flash[:success] %></p>
<% end %>

<% if flash[:error] %>
  <p><%= flash[:error] %></p>
<% end %>

<%= form_tag login_path do %>
  <p>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </p>

  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>

  <p>
    Owner <%= radio_button_tag :type, "owner", required: true %>
    Walker <%= radio_button_tag :type, "walker", required: true %>
  </p>

  <%= submit_tag "Login" %>

<h3>New? Sign up!</h3>
  <div class="category">
  <p>
    <%= link_to "Dog walker?", '/walkers/new' %>
    <%= link_to "Dog owner?", '/owners/new' %>
  </p>
  </div>
<% end %>
