<%= form_for(@comment) do |f| %>
<% if @comment.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(@comment.errors.count, "error") %>
        prohibited this comment from being saved:</h2>

    <ul>
        <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="field">
    <%= f.label :message %><br>
    <%= f.text_area :message %>
</div>
<p>
    <div class="field">
        <%= f.label :walker_id %><br>
        <%= f.select :walker_id, @walkers.map {|walker| [walker.name, walker.id] } %>
    </div>
    <p>
        <div class="actions">
            <%= f.submit %>
        </div>
        <% end %>
